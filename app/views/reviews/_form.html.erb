<% if @review.errors.any? %>
	<ul>
		<% @review.errors.full_messages.each do |error| %>
			<li><%= error %></li>
			<% end %>
	</ul>
<% end %>

<%= form_for [@pet, @review] do |f| %>
	<%= f.label  :comment %>
	<%= f.text_field :comment %>
<br />
	<%= f.label :rating %>
	<%= f.select :rating, ['*', '**', '***', '****', '*****'] %>
<br />
	<%= f.submit %>
<% end %>
<br />
