<h1><%= @pet.name %> </h1>

<table>
	<thead>
		<tr>
			<th>Breed</th>
			<th>Color</th>
			<th>Fur Type</th>
			<th>Gender</th>
			<th>Age</th>
			<th>Available</th>
			<th>Profile</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= @pet.breed %></td>
			<td><%= @pet.fur_color %></td>
			<td><%= @pet.fur_type %></td>
			<td><%= @pet.gender %></td>
			<td><%= @pet.age %></td>
			<td><%= @pet.available %></td>
			<td><%= @pet.profile %></td>
		</tr>
	</tbody>
</table>

<%= link_to 'Edit your pet', edit_pet_path(@pet) %> ||
<%= link_to 'Remove your pet', pet_path(@pet), method: :delete %> ||
<%= link_to 'All pets', pets_path %> ||
<%= link_to 'Home', root_path %>
<%= link_to "All comments", pets_reviews_path(@pets) %>
