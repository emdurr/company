<div class="row">
	<div class="forms col s12 b-town">
		<div class="in_forms">
			<%= form_for @pet do |f| %>	
				<%= f.label :name %>
				<%= f.text_field :name %>
				<br>
				<%= f.label :type %>
				<%= f.select :type, ['Dog', 'Cat'] %>
				<br>
				<div>
					<%= f.label :breed %>
					<%= f.text_field :breed %>
				</div>
				<div>
					<%= f.label :fur_type %>
					<%= f.select :fur_type, ['long', 'short'] %>
				</div>
				<div>
					<%= f.label :fur_color %>
					<%= f.text_field :fur_color %>
				</div>
				<div>
					<%= f.label :gender %>
					<%= f.text_field :gender %>
				</div>
				<div>
					<%= f.label :age %>
					<%= f.text_field :age %>
				</div>
				<div class="text-area">
					<%= f.label :profile %>
					<%= f.text_area :profile %>
				</div>
				<div>
					<%= f.label :available %>
					<%= f.select :available, [true, false] %>
				</div>
				<br>
				<%= f.submit :class => 'btn' %>
			<% end %>	
		</div>
	</div>
</div>
				
				
				